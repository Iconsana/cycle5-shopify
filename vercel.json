{
  "version": 2,
  "buildCommand": "cd client && npm ci --legacy-peer-deps && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "cd client && npm install --legacy-peer-deps",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
